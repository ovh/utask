{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "utask-ui": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "sass"
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-builders/custom-webpack:browser",
                    "options": {
                        "customWebpackConfig": {
                            "path": "./extra-webpack.config.js"
                        },
                        "outputPath": "dist/utask-ui",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "tsconfig.app.json",
                        "aot": true,
                        "assets": [
                            "src/assets",
                            {
                                "glob": "**/*",
                                "input": "./node_modules/@ant-design/icons-angular/src/inline-svg/",
                                "output": "/assets/"
                            },
                            {
                                "glob": "ng-zorro-antd.dark.min.css",
                                "input": "./node_modules/ng-zorro-antd",
                                "output": "/assets/"
                            },
                            {
                                "glob": "**/*",
                                "input": "./node_modules/monaco-editor/min/vs",
                                "output": "/assets/vs/"
                            }
                        ],
                        "styles": [
                            "./node_modules/ng-zorro-antd/ng-zorro-antd.min.css",
                            "./node_modules/ng-zorro-antd/code-editor/style/index.min.css",
                            "src/styles.sass"
                        ],
                        "scripts": [],
                        "allowedCommonJsDependencies": [
                            "dagre-d3"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "extractCss": true,
                            "namedChunks": false,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2mb",
                                    "maximumError": "5mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "6kb",
                                    "maximumError": "10kb"
                                }
                            ]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-builders/custom-webpack:dev-server",
                    "options": {
                        "proxyConfig": "proxy.conf.js",
                        "browserTarget": "utask-ui:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "utask-ui:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "utask-ui:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "tsconfig.spec.json",
                        "karmaConfig": "karma.conf.js",
                        "assets": [
                            "src/assets"
                        ],
                        "styles": [
                            "./node_modules/ng-zorro-antd/ng-zorro-antd.min.css",
                            "./node_modules/ng-zorro-antd/code-editor/style/index.min.css",
                            "src/styles.sass"
                        ],
                        "scripts": []
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "tsconfig.app.json",
                            "tsconfig.spec.json",
                            "e2e/tsconfig.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                },
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "e2e/protractor.conf.js",
                        "devServerTarget": "utask-ui:serve"
                    },
                    "configurations": {
                        "production": {
                            "devServerTarget": "utask-ui:serve:production"
                        }
                    }
                }
            }
        },
        "utask-lib": {
            "projectType": "library",
            "root": "projects/utask-lib",
            "sourceRoot": "projects/utask-lib/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-ng-packagr:build",
                    "options": {
                        "tsConfig": "projects/utask-lib/tsconfig.lib.json",
                        "project": "projects/utask-lib/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/utask-lib/tsconfig.lib.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/utask-lib/src/test.ts",
                        "tsConfig": "projects/utask-lib/tsconfig.spec.json",
                        "karmaConfig": "projects/utask-lib/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/utask-lib/tsconfig.lib.json",
                            "projects/utask-lib/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "utask-ui"
}